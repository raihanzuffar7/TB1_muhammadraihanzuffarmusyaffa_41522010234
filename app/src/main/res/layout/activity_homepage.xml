<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bghomepage">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img6"
                android:layout_marginTop="85sp"
                android:text="Selamat Pagi"
                android:textSize="20sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginStart="20sp"
                android:layout_toEndOf="@+id/img6"
                android:text="Olivia Gabrielle"
                android:textSize="20sp"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toEndOf="@+id/img6"
                android:text="olivia.gabrielle@gmail.com"
                android:layout_marginStart="20sp"
                android:textSize="11sp"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70sp"
                android:layout_marginStart="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pp" />

            <Button
                android:id="@+id/imageView35"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="341dp"
                android:layout_marginLeft="341dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/navigation"
            />

            <HorizontalScrollView
                android:id="@+id/horizontalview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:foregroundGravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/relatiff1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/f1aqua"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp" />

                    <RelativeLayout
                        android:id="@+id/relatifnamaf1"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/relatiff1"
                        android:background="@drawable/tjr">

                        <View
                            android:id="@+id/relatiff2"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="26dp"
                            android:layout_marginTop="51dp"
                            android:background="@drawable/cangkir"/>

                        <View
                            android:id="@+id/kotak1"
                            android:layout_width="88dp"
                            android:layout_height="21dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="124dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="58dp"
                            android:background="#1A529D"/>

                        <View
                            android:id="@+id/kotak2"
                            android:layout_width="140dp"
                            android:layout_height="21dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="123dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="100dp"
                            android:background="#1A529D"/>

                        <TextView
                            android:id="@+id/scan_kode_d"
                            android:layout_width="157dp"
                            android:layout_height="87dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="124dp"
                            android:layout_marginTop="55dp"
                            android:gravity="center_vertical"
                            android:text="@string/scan_kode_d"
                            android:textAppearance="@style/scan_kode_d"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/relatifnamaf1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/f3aqua"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/rectangle_4"
                android:layout_width="368dp"
                android:layout_height="258dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="464dp"
                android:background="@drawable/group_372_t"
                android:elevation="10dp">


                <Button
                    android:id="@+id/btnscan"
                    android:layout_width="164.46dp"
                    android:layout_height="101dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="29dp"
                    android:background="@drawable/scanbtl"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <TextView
                    android:id="@+id/some_id"
                    android:layout_width="105dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="156dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="-25sp"
                    android:text="@string/some_id"
                    android:textAppearance="@style/some_id"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/traveloka"
                android:layout_marginTop="774dp"
                android:layout_marginLeft="31dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shopee"
                android:layout_marginTop="774dp"
                android:layout_marginLeft="224dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/foodgift"
                android:layout_marginTop="1004dp"
                android:layout_marginLeft="31dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tutupbotol"
                android:layout_marginTop="1004dp"
                android:layout_marginLeft="224dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </TextView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/supprise"
                android:layout_marginTop="1297dp"
                android:layout_marginLeft="31dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>


            <TextView
                android:id="@+id/hadiahmenarik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadiah Menarik"
                android:textSize="18dp"
                android:fontFamily="@font/montserratbold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1254dp"
                android:lineHeight="900dp"/>
            
        </RelativeLayout>
        </ScrollView>

    <com.google.android.material.navigation.NavigationView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/hal_view"
        android:layout_gravity="end"
        app:menu="@menu/menu"/>

</androidx.drawerlayout.widget.DrawerLayout>